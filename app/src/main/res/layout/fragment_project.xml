                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp">

                </TextView>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_cancel_24"
                    android:tint="@color/grey">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
