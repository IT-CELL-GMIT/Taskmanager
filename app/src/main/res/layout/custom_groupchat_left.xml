<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txtLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/txt_chat_bg"
        android:backgroundTint="#ffffff"
        android:padding="4dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_marginEnd="80dp">


    <TextView
        android:id="@+id/fullNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="this is text msg"
        android:textColor="@color/primaryTextColor">

    </TextView>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbg"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/icons">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/mainbg"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fullNameImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/light">

                </TextView>

                <ImageView
                    android:id="@+id/msgSendImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_white"
                    android:scaleType="centerCrop"
                    android:maxHeight="250dp"
                    android:minHeight="250dp"
                    android:layout_below="@id/fullNameImg">

                </ImageView>
                <ImageView
                    android:id="@+id/blurImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_white"
                    android:tint="@color/icons"
                    android:scaleType="centerCrop"
                    android:maxHeight="250dp"
                    android:minHeight="250dp">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/mainbg"
                    app:cardCornerRadius="15dp"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/colorPrimary">

                    <LinearLayout
                        android:id="@+id/llDownalod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/download_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_download_24"
                            android:tint="@color/icons">

                        </ImageView>

                        <TextView
                            android:id="@+id/downlaod_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="download"
                            android:textColor="@color/icons"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_pdf"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbg"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullNamePdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Full Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mainbg"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red">

                        <ImageView
                            android:id="@+id/contentPdf"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            android:maxHeight="350dp"
                            android:minHeight="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_picture_as_pdf_24">

                        </ImageView>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/light"
                        android:gravity="center_vertical"
                        android:minHeight="40dp">

                        <TextView
                            android:id="@+id/pdfName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="pdf_name.pdf"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_margin="2dp">

                        </TextView>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/downloadBtn"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/download_icon"
                            android:layout_marginRight="5dp">

                        </de.hdodenhof.circleimageview.CircleImageView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>