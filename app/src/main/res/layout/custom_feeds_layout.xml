<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/chatListLL"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/main_profile_image">

            </de.hdodenhof.circleimageview.CircleImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_name"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="username">
                </TextView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_desc"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:text="Position">

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_feedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="feedtext"
        android:textSize="23dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        android:fontFamily="@font/robotomedium">

    </TextView>

    <TextView
        android:id="@+id/tv_timeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="55:55 55-55_5555"
        android:textSize="16dp"
        android:textColor="@color/primaryTextColor"
        android:layout_margin="5dp"
        android:fontFamily="@font/robotomedium">

    </TextView>

    <View
        android:id="@+id/optionsView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/optionsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chat_icon">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

        </TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notsaved_icon">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

        </TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment_icon">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>